<%= link_to article, class: 'block' do %>
  <div class="py-4 px-6 bg-white">
    <div class="flex">
      <div class="w-10 h-10 rounded-full overflow-hidden mr-2">
        <%= image_tag article.user.image, class: 'w-full h-full object-cover' %>
      </div>
      <div class="flex flex-col">
        <span class="block font-semibold text-xs">@<%= article.user.name %>(<%= article.user.nickname %>)</span>
        <span class="block text-xs mb-2 text-gray-500"><%= l article.created_at %></span>
      </div>
    </div>
    <div class="ml-12">
      <h3 class="text-xl font-bold mb-2"><%= article.title %></h3>
      <% article.tags.each do |tag| %>
        <span class="bg-custom-gray rounded text-sm inline-block px-2 mx-0.5"><%= tag.name %></span>
      <% end %>
      <div class="flex justify-between items-end">
        <div class="flex items-center">
          <%= render 'atoms/good', size: 4 %>
          <span><%= article.goods_count %></span>
        </div>
        <%= render 'atoms/stock', size: 8 %>
      </div>
    </div>
  </div>
<% end %>
