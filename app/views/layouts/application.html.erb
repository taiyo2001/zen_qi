      <% end %>
      <div class="flex">
        <%= form_with model: @article, local: true do |f| %>
          <%= f.text_field :content, class: 'bg-custom-gray h-9 w-80 border-none rounded-lg mr-2', placeholder: '記事、質問を検索' %>
          <%= f.submit '検索', class: 'hidden' %>
        <% end %>
        <% if user_signed_in? %>
          <%# TODO: turboが使えてない %>
          <%= link_to 'お知らせ', new_user_session_path, class: ' mx-2 border-2 border-custom-green' %>
          <%= link_to 'ユーザ', user_path(current_user), class: ' mx-2 border-2 border-custom-green rounded-full' %>
          <%= link_to '投稿する', new_article_path, class: ' mx-2 text-white bg-custom-green font-bold rounded-lg py-2 px-4' %>
        <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: ' block border-2 border-custom-green rounded-lg py-1 p-2 mr-2' %>
          <%= link_to '新規登録', new_user_registration_path, class: 'border-2 border-custom-green bg-custom-green rounded-lg py-1 px-2 text-white' %>
        <% end %>
      </div>
    </div>
  </div>
</header>
<nav class="flex justify-center bg-white">
  <div class="max-w-screen-2xl w-full">
    <ul class="flex">
      <% if user_signed_in? %>
        <li>
          <%= link_to 'ホーム', new_user_session_path, class: "px-2 pt-4 pb-8" %>
          <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
          </div>
        </li>
        <li>
          <%= link_to 'タイムライン', new_user_session_path, class: "px-2 pt-4 pb-8" %>
          <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
          </div>
        </li>
      <% end %>
      <li>
        <%= link_to 'トレンド', new_user_session_path, class: "px-2 pt-4 pb-8" %>
        <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
        </div>
      </li>
      <li>
        <%= link_to '質問', new_user_session_path, class: "px-2 pt-4 pb-8" %>
        <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
        </div>
      </li>
      <li>
        <%= link_to '公式イベント', new_user_session_path, class: "px-2 pt-4 pb-8" %>
        <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
        </div>
      </li>
      <li>
        <%= link_to '公式コラム', new_user_session_path, class: "px-2 pt-4 pb-8" %>
        <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
        </div>
      </li>
      <li>
        <%= link_to '募集', new_user_session_path, class: "px-2 pt-4 pb-8" %>
        <div class="h-0.5 bg-custom-green <%= 'border-b-4 border-custom-green' if request.path == '/' %>" >
        </div>
      </li>
    </ul>
  </div>
</nav>
<div class="bg-black p-3">
  <div class="bg-white py-4">
    <p class="border-2 border-black p-2">こんにちは</p>
  </div>
</div>
<div class="mb-20">
  <div class="border-b pb-7 mb-7">
    <h2 class="text-4xl">ZenQi にログイン</h2>
  </div>
  <div class="flex">
    <div class="border-r w-1/2 p-2">
      <div class="border-b mb-6">
        <%= link_to 'GitHubでログイン', new_user_session_path,
                      class: 'rounded py-1 mb-2 w-full bg-white text-center font-bold block border border-custom-gray hover:bg-gray-100' %>
        <%= link_to 'Googleでログイン', new_user_session_path,
                      class: 'rounded py-1 mb-2 w-full bg-white text-center font-bold block border border-custom-gray hover:bg-gray-100' %>
        <%= link_to 'X(Twitter)でログイン', new_user_session_path,
                      class: 'rounded py-1 mb-2 w-full bg-white text-center font-bold block border border-custom-gray hover:bg-gray-100' %>
        <p class="mb-4 text-sm text-gray-300">X(Twitter)ログインに制限が生じる可能性がございます。<br>
          他のログイン方法を併用お願いします。</p>
      </div>
      <div>
      </div>
    </div>
    <div class=" w-1/2 p-2">
    </div>
  </div>
</div>
<main class="flex justify-center bg-custom-gray">
  <div class="max-w-screen-2xl w-full">
    <%= yield %>
  </div>
</main>
</body>
</html>
